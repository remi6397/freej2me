<project name="FreeJ2ME">
	<echo message="Building FreeJ2ME" />


<!--
****************************************************
*    iOS
****************************************************
-->

	<echo message="FreeJ2ME - iOS" />
	<mkdir dir="build/classes"/>
	<javac
		srcdir="src"
		destdir="build/classes"
		includeantruntime="false"
		debug="true"
		debuglevel="lines,vars,source"
	>
	<compilerarg value="-Xlint:unchecked"/>
	<compilerarg value="-Xlint:deprecation"/>
	</javac>


<!--
****************************************************
*    Jar Files
****************************************************
-->

	<echo message="Building JAR - iOS" />
	<jar
		destfile="build/freej2me.jar"
		basedir="build/classes">
		<fileset dir="resources" />
		<metainf dir="META-INF" />
		<manifest>
			<!-- iOS Version -->
			<attribute name="Main-Class" value="pl.nelz.choklad.Choklad"/>
			<attribute name="Implementation-Title" value="FreeJ2ME"/>
		</manifest>
	</jar>


</project>
